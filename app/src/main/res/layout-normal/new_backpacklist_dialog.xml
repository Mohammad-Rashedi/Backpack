<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/newBackpackListDialog"
    style="@style/MyAlertDialogStyle"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:fontFamily="@font/dima_font"
        android:gravity="center"
        android:text="نام لیست خود را وارد کنید"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/backpackhome"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/editTextBackpacklistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="نام کوله پشتی"
        android:inputType="textPersonName"
        android:fontFamily="@font/dima_font"
        android:gravity="center"

        />
</LinearLayout>