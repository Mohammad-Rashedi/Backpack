<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myWeather.WeatherHomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:id="@+id/imageButtonIranWHome"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/rect_blue"
            android:padding="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/iranmap"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="155dp" />

        <TextView
            android:id="@+id/textViewIranWHome"
            android:layout_width="138dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/dimaubuntu"
            android:gravity="center"
            android:text="ایران"
            android:textSize="30dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonBackpack"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonBackpack"
            app:layout_constraintHorizontal_bias="0.804"
            app:layout_constraintStart_toStartOf="@+id/imageButtonBackpack"
            app:layout_constraintTop_toTopOf="@+id/imageButtonBackpack" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:id="@+id/imageButtonWorldWHome"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"

            android:adjustViewBounds="true"
            android:background="@drawable/rect_blue_weather"
            android:padding="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/worldmap"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="267dp" />

        <TextView
            android:id="@+id/textViewWorldWHome"
            android:layout_width="138dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/dimaubuntu"
            android:gravity="center"

            android:text="کشورهای دیگر"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonWeather"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonWeather"
            app:layout_constraintHorizontal_bias="0.804"
            app:layout_constraintStart_toStartOf="@+id/imageButtonWeather"
            app:layout_constraintTop_toTopOf="@+id/imageButtonWeather" />

    </FrameLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="منبع دریافت اطلاعات آب و هوا: www.openweathermap.org"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:fontFamily="@font/dimaubuntu"
            android:textSize="30dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>